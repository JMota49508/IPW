        <div class="rectangle">
            <b style="font-size: 52px;">Remove Movie From Group: {{data.name}}</b>
            <form action="/deleteMovieFromGroup/{{data.id}}" method="POST" class="form_search">
                <label style="color:white;font-size:22px;" for="movie">Choose the movie you want to delete:</label>
                <select name="movie" id="movie">
                    {{#each data.movies}}
                        <option value="{{id}}">{{title}}</option>
                    {{/each}}
                </select>
                <p><button name="subject" type="submit">DELETE MOVIE FROM GROUP</button></form></p>
            </form>
        </div>
