    <body class="logo">
      <b>CMDB API</b>
      <ul class="home">
        <li><a href="/"> HOME </a></li>
        <li><a href="/movieSearch"> MOVIES </a></li>
        </li>
        <li class="dropdown">
          <a class="dropbtn">GROUPS</a>
          <div class="dropdown-content">
              <a href="/groups">MY GROUPS</a>
              <a href="/group">CREATE NEW GROUP</a>
              <a href="/editGroup">EDIT GROUP</a>
